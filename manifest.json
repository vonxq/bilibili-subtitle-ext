{
  "manifest_version": 3,
  "name": "Bilibili 字幕学习助手",
  "version": "1.0.0",
  "description": "在 Bilibili 视频页面展示 AI 字幕，支持多语言筛选与点击跳转，助力英语学习",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*",
    "*://aisubtitle.hdslb.com/*",
    "*://api.bilibili.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bilibili.com/video/*",
        "*://*.bilibili.com/cheese/*"
      ],
      "css": [
        "src/content/styles/panel.css",
        "src/content/styles/filter.css",
        "src/content/styles/subtitle.css"
      ],
      "js": [
        "src/utils/constants.js",
        "src/utils/time.js",
        "src/utils/dom.js",
        "src/content/services/player-service.js",
        "src/content/services/subtitle-service.js",
        "src/content/components/SubtitleItem.js",
        "src/content/components/SubtitleList.js",
        "src/content/components/LanguageFilter.js",
        "src/content/components/Header.js",
        "src/content/components/Panel.js",
        "src/content/index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js"],
      "matches": ["*://*.bilibili.com/*"]
    }
  ]
}
